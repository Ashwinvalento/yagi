#!/usr/bin/env python

import os                             
import sys


possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'yagi', '__init__.py')):
    sys.path.insert(0, possible_topdir)

import yagi
import yagi.config
import yagi.log

LOG = yagi.log.logger

def load_conf():
    return yagi.config.parse_conf()

if __name__ == '__main__':
    conf = load_conf()
    yagi.log.setup_logging()
    LOG.debug('Initializing Yagi...')
    yagi.start(conf)
